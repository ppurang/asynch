<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date{"yyyy-MM-dd'T'HH:mm:ss,SSS", UTC} %yellow([%thread]) %highlight(%-5level) %cyan(%logger{15}) - %m%n</Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>